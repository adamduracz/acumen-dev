model Main(simulator) = 
  initially
    mode  =  "init" &
    game  =  Game &
    players  =  (PlayerA, PlayerB, PlayerC)
  always
  switch mode
    case "init"
      for p1 = players
        for p2 = players
          if p1 ~= p2
            create game(p1, p2)
          end
        end
      end &
      mode + == "persist"
    case "persist"
  end
end

model PlayerA(x,y,z) always
model PlayerB(x,y,z) always
model PlayerC(x,y,z) always

model Game(p1C,p2C) 
= initially
  p1  =  create p1C(1,2,3) &
  p2  =  create p2C(1,2,3)
always
 
