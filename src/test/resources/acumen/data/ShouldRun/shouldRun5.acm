model A() always

model Main(simulator) = 
  initially
    x  =  create A() &
    mode  =  "Init" &
    y  =  0
  always
  simulator.timeStep + == 1 &
  simulator.endTime + == 1 &
  switch mode
    case "Init"
      if x.modelName == type(A)
        y := 1
      else
        y := 2
      always &
      mode + == "Idle"
    case "Idle"
  end
 
