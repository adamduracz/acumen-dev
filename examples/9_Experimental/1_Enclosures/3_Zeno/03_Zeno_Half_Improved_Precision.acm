/* Zeno Half overconstrained with improved precision
 * Authors: Walid Taha and Adam Duracz
 * Decreasing the localisation time step 
 * from 0.1 to 0.001
 * improves the end-time precision. 
 */
class Main(simulator)
  private
    d := 1; d' := -1;
    s := 1/2;
    mode := ""; 
  end
  switch mode
    case "" 
      require s <= abs(d)
      if s == d 
        s := s/2; 
        mode := "" 
      end;
      d' = -1;
  end;
  simulator.endTime := 2.1;
  simulator.minSolverStep := 1.1;
  simulator.minLocalizationStep := 0.001; // Smaller!
  simulator.minComputationImprovement := 0;
end