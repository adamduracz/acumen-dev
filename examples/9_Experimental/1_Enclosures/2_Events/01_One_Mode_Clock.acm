/* One Mode Clock
 * Authors: Jan Duracz
 * A system with periodic resets.
 */
class Main(simulator) 
private mode := "On"; x := 1; x' := -1 end
  switch mode
    case "On" require x >= 0
      if x == 0
        x := 1; 
        mode := "On"
      end; 
      x' = -1 
  end;
  simulator.endTime := 15;
  simulator.minSolverStep := 0.1;
  simulator.minLocalizationStep := 0.05;
  simulator.minComputationImprovement := 0;
end
