class Main(simulator)
  private
    x:=3; x':=0; x'':=-9.8; mode :="free_fall"; 
    _3D := ["Sphere",[0,0,3],0.2,[1,0,0],[0,0,0]]; 
  end 
  
  switch mode

    case "free_fall"
    x''=-9.8;
    _3D =["Sphere",[0,0,x],0.2,[1,0,0],[0,0,0]];

    if x < 0 && x' < 0
      x' := -0.9*x';
      mode := "free_fall";
    end

  end 
end



