class Main(simulator)
  private
    d := 1; d' := 0;
    s := 1/2; s' := 1/2;
    mode := ""; 
  end
  switch mode
    case ""
      if d == s 
        s := s/2; 
        mode := "" 
      end;
      d' = -1;
      s' = d - s;
  end;
  simulator.startTime := 0;
  simulator.endTime := 1.1;
  simulator.minSolverStep := 0.01;
  simulator.minLocalizationStep := 0.001;
  simulator.minImprovement := 0.001;
end